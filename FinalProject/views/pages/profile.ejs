<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campus Connections - Home</title>

    <link rel='stylesheet' href='/public/styles/global.css'>
    <link rel="stylesheet" href="/public/styles/profile.css">
</head>
<body>
    <%- include('../components/header') %>

    <main>
        <h2><%= user.first_name %>'s Connections</h2>
        
        <% if (connections.length) { %>
        <table>
            <tr>
                <th>Connection</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
            <% connections.forEach(c => { %>
                <%- include('../components/hostedConnection', { connection: c }) %>
            <% }) %>
        </table>
        <% } else { %>
            <p>You are not hosting any connections</p>
        <% } %>

        <h2><%= user.first_name %>'s RSVPs</h2>

        <% if (rsvps.length) { %>
        <table>
            <tr>
                <th>Connection</th>
                <th>Category</th>
                <th>Attending</th>
            </tr>

            <% rsvps.forEach(r => { %>
                <%- include('../components/rsvp', { rsvp: r }) %>
            <% }) %>
        </table>
        <% } else { %>
            <p>You have no RSVPs</p>
        <% } %>
    </main>

    <%- include('../components/footer') %>
</body>
</html>