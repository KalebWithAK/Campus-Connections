<%- include('../components/head') %>
    <link rel="stylesheet" href="/public/css/newConnection.css">
</head>
<body>
    <%- include('../components/header') %>

    <main>
        <!--topic, title, host, details, where, when, start, end, image url-->
        <form action="/connection/edit/<%= connection._id %>" method="post">
            <h2>Edit Connection</h2>

            <label>Title</label>
            <input type="text" placeholder="title" name="title" value="<%= connection.title %>" required>

            <label>Topic</label>
            <input type="text" placeholder="topic" name="topic" value="<%= connection.topic %>" required>

            <label>Details</label>
            <textarea name="details"><%= connection.details %></textarea>

            <label>Location</label>
            <input type="text" placeholder="location" name="location" value="<%= connection.location %>">

            <label>Date</label>
            <input type="date" name="date" value="<%= connection.date %>" required>

            <label>Start</label>
            <input type="time" name="start_time" value="<%= connection.start_time %>" required>

            <label>End</label>
            <input type="time" name="end_time" value="<%= connection.end_time %>" required>

            <label>Image URL</label>
            <input type="text" placeholder="image url" name="img" value="<%= connection.img %>">
            
            <input type="submit" class="button">
        </form>
    </main>

    <%- include('../components/footer') %>
</body>
</html>